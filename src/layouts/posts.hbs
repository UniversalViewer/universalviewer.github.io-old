[
    {{#withSort post 'data.posted'}}
        {{#each this.pages }}
        {{!debug this}}
            {
                "posted": "{{data.posted}}",
                "posted-formatted": "{{moment posted format="DD MMM YYYY"}}",
                "title": "{{data.title}}",
                "url": "{{dest}}",
                "content": "{{#jsonFriendly}}{{#gh-markdown}}{{page}}{{/gh-markdown}}{{/jsonFriendly}}"
            }{{#unless @last}},{{/unless}}
        {{/each}}
    {{/withSort}}
]